<style>
    .alert{
        opacity: 0;
    }
</style>

@if (TempData.ContainsKey("alert"))
{
    var ret = TempData["alert"] as WordStore.Web.Models.AlertMessage;
    <div class="alert alert-dismissible @ret.Type" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>@ret.Title</strong> @ret.Message
    </div>
}